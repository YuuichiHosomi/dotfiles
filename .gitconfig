[user]
	name = Dennis Kaarsemaker
	email = dennis@kaarsemaker.net
[core]
	excludesfile = ~/.gitignore
	editor = vim
	pager = less -R$LESS
[color]
	ui = auto
[alias]
	hist = log --graph --color=always --pretty='[%C(cyan)%h%Creset]%C(bold cyan)%d%Creset %s' --all
	nevermind = reset --hard
	minitrue = rebase -i
	force-push = push --force-with-lease
	fast-forward = merge --ff-only
[push]
	default = simple
	followtags = true
[fetch]
	prune = true
[log]
	decorate = true
[transfer]
	fsckObjects = true
[merge]
	stat = false
[rebase]
	autosquash = true
