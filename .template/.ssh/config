#!/bin/bash
# vim:syntax=sh

mode=0400
dirmode=0700

content='ForwardX11            no
HashKnownHosts        no
ServerAliveInterval   60
ForwardAgent          yes

StrictHostKeyChecking no

ControlMaster         auto
ControlPath           ~/.ssh/control/%h_%p_%r
ControlPersist        yes

Host *.dc.perl.space
ProxyJump gateway.perl.space
'

if [ -e ~/.ssh/config-local ]; then
    content="$content

$(cat ~/.ssh/config-local)"
fi

content="$content

Host                  github.com launchpad.net
IdentityFile          ~/.ssh/id_rsa_git

Host                  10.42.* *.kaarsemaker.net kaarsemaker.net *.paroclean.nl *.seveas.net
User                  dennis
Identityfile          ~/.ssh/id_rsa_me

Host                  *.perl.space *.perl.org
User                  dkaarsemaker"
